{
   "version": 2,
   "name": "restaurante-front",
   "builds": [
      {
         "src": "client/package.json",
         "use": "@vercel/static-build",
         "config": {
            "distDir": "build"
         }
      }
   ],
   "routes": [
      {
         "src": "/static/(.*)",
         "dest": "/static/$1"
      },
      {
         "src": "/(.*)",
         "dest": "/index.html"
      }
   ],
   "buildCommand": "cd client && npm ci && npm run build",
   "outputDirectory": "client/build",
   "installCommand": "cd client && npm ci"
}
